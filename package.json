{
  "name": "@walrus/bundle-require",
  "version": "1.1.0",
  "description": "加载用户提供的配置文件，支持typescript。",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "walrus-test",
    "build": "tsup src/index.ts --format cjs --dts-resolve",
    "release": "walrus release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/walrusjs/bundle-require.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/walrusjs/bundle-require/issues"
  },
  "homepage": "https://github.com/walrusjs/bundle-require#readme",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "esbuild": ">=0.13"
  },
  "dependencies": {
    "strip-json-comments": "^4.0.0"
  },
  "devDependencies": {
    "@walrus/cli": "^1.3.4",
    "@walrus/plugin-release": "^1.14.3",
    "@walrus/test": "1.3.0",
    "esbuild": "0.14.9",
    "lint-staged": "12.1.4",
    "prettier": "2.5.1",
    "tsup": "5.11.9",
    "typescript": "4.5.4",
    "yorkie": "2.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  }
}
